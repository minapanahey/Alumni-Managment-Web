
@if (HttpContextAccessor.HttpContext.Session.GetString("token") != null)
{
    
    <form method="post" id="logoutForm" class="navbar-right" asp-action="logout" asp-controller="user" >
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-action="settings" asp-controller="user" title="settings">Hello @HttpContextAccessor.HttpContext.Session.GetString("userEmail")</a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-action="Register" asp-controller="user" id="registerLink">Regsiter</a>
        </li>
        <li>
            <a asp-action="Login" asp-controller="user" id="loginLink">Log in</a>
        </li>
    </ul>
}
